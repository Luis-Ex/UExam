= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :question
    = f.text_field :question
  .field
    = f.label :option_1
    = f.text_field :option_1
  .field
    = f.label :option_2
    = f.text_field :option_2
  .field
    = f.label :option_3
    = f.text_field :option_3
  .field
    = f.label :option_4
    = f.text_field :option_4
  .field
    = f.label :option_5
    = f.text_field :option_5
  .field
    = f.label :correct_option
    = f.number_field :correct_option
  .field
    = f.label :item_number
    = f.number_field :item_number
  .actions
    = f.submit 'Save'
